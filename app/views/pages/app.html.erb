<div id="app" ng-controller="MainController">
	<section id="tasks" ng-controller="TasksController">
		<ul>
			<li ng-repeat="(k, v) in tasks" ng-show="activeCategory == v.category_id">{{ v.name }} - {{ v.category_id }}</li>
		</ul>
		<button ng-click="new()">New</button>
	</section>
	<aside id="categories" ng-controller="CategoriesController">
		<ul>
			<li ng-repeat="category in categories" ng-click="setActive($index)" ng-dblclick="edit($index)" ng-class="{ active: activeCategory == $index }">{{ category }} <span>(0)</span></li>
		</ul>
		<button ng-click="new()">New</button>
	</aside>
</div>